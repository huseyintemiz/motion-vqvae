{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train VQ Model",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_vq.py",
            "console": "integratedTerminal",
            "args": [
                "--name", "vq_cos_ortho",
                "--gpu_id", "0",
                "--dataset_name", "t2m",
                "--batch_size", "256",
                "--num_quantizers", "6",
                "--max_epoch", "50",
                "--quantize_dropout_prob", "0.2",
                "--gamma", "0.05",
                "--train_env","local",
                "--vq_arch_option", "vq_cos_ortho",
                // "--gdrive_save",
                "--demo_run",
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Eval residual_lfq",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/eval_t2m_vq.py",
            "console": "integratedTerminal",
            "args": [
                "--name", "residual_lfq",
                "--gpu_id", "0",
                "--dataset_name", "t2m",
                "--ext", "residual_lfq"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Eval residual_vq",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/eval_t2m_vq.py",
            "console": "integratedTerminal",
            "args": [
                "--name", "residual_vq_replicate",
                "--gpu_id", "0",
                "--dataset_name", "t2m",
                "--ext", "residual_vq_replicate"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
    ]
}


